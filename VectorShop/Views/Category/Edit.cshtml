@model VectorShop.Models.ViewModels.PriCatSecCatViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@{
    ViewBag.Title = "ویرایش دسته بندی";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @if (Model.SPriCat != null)
        {
            @Html.HiddenFor(model => model.SPriCat.PriCatId)
            <div class="form-group">
                @Html.LabelFor(model => model.SPriCat.PriCatTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SPriCat.PriCatTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SPriCat.PriCatTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SPriCat.PriCatDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SPriCat.PriCatDesc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SPriCat.PriCatDesc, "", new { @class = "text-danger" })
                </div>
            </div>
        }
        @if (Model.SSecCat != null)
        {
            @Html.HiddenFor(model => model.SSecCat.SecCatId)
            <div class="form-group">
                @Html.LabelFor(model => model.SSecCat.SecCatTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SSecCat.SecCatTitle, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SSecCat.SecCatTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.SSecCat.SecCatDesc, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.SSecCat.SecCatDesc, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.SSecCat.SecCatDesc, "", new { @class = "text-danger" })
                </div>
            </div>
        }

        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ذخیره" class="btn btn-default" />
            </div>

        </div>

    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
