@model IEnumerable<VectorShop.Models.Product>

<div class="row" style="height: 290px;">
    <div class="col-md-12">
        
        @foreach (var item in Model)
        {
            
            <div class="" style="padding-right: 4px; padding-top: 5px; padding-left: 4px; display: inline-block;">
                <div class="thumbnail" style="">


                    <h4 class="text-center"><span class="label label-default">@item.ProductName</span></h4>
                    <p class="text-center" style="font-size: small;"> @PersianDateTime.GregorianDateToPersianLong(item.ProductDate)</p>
                    <a href="/Product/Details/@item.ProductId/@VectorShopUtility.StringDasher(item.ProductName)"><img src="@item.ProductPicture" class="img-responsive" style="height: 180px; width: 190px;"></a>


                    <div class="caption" style="margin: 0; padding: 0;">
                        <div class="row">
                            <div class="col-md-12 col-xs-12 price">
                                <h4 class="text-center">
                                    قیمت:
                                    @{
            if (item.IsProductFree)
            {
                            <label style="color: limegreen;">رایگان</label>

            }
            else
            {
                            <label>@String.Format("{0:0}", item.ProductPrice) تومان</label>
            }
                                    }
                                </h4>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        }
    </div>
</div>